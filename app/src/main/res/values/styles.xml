<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name ="colorButtonNormal">#2292E4</item>
    </style>

  <style name ="TextView" parent ="Widget.AppCompat.ListView.Menu">
      <item name="android:labelTextSize">13pt</item>
      <item name = "android:textStyle">normal</item>
      <item name="android:textColor">#000000</item>
  </style>

    <style name="TitleText">
        <item name="android:textColor">#2292E4</item>
        <item name="android:textSize">11pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonTestTheme">
        <item name="android:background">@drawable/radius</item>
        <item name= "android:textColor">#fff</item>
    </style>

    <style name = "Text">
        <item name = "android:textColor">#2292E4</item>
        <item name="android:textSize">8pt</item>
        <item name = "android:textStyle">bold</item>
    </style>

    <style name="NoRegistrationText">
        <item name="android:textColor">#2292E4</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
